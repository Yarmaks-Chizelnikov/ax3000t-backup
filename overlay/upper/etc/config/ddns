
config ddns 'global'
	option ddns_dateformat '%F %R'
	option ddns_loglines '250'
	option ddns_rundir '/var/run/ddns'
	option ddns_logdir '/var/log/ddns'
	option upd_privateip '1'

config service 'myddns_ipv4'
	option lookup_host 'xamray.didns.ru'
	option enabled '1'
	option use_ipv6 '0'
	option update_url 'https://dynupdate.alviy.com/token/update?hostname=[DOMAIN]&token=[PASSWORD]&myip=[IP]'
	option domain 'xamray.didns.ru'
	option username '2eceb2c0134b0316fd3724c86ba4af55'
	option password '2eceb2c0134b0316fd3724c86ba4af55'
	option ip_source 'web'
	option use_syslog '2'
	option use_https '1'
	option check_interval '60'
	option check_unit 'minutes'
	option force_interval '24'
	option force_unit 'hours'
	option retry_unit 'seconds'
	option ip_url 'http://checkip.dyndns.com'
	option interface 'wan'

config service 'myddns_ipv6'
	option update_url 'https://dynupdate.alviy.com/token/update?hostname=[DOMAIN]&token=[PASSWORD]&myip=[IP]'
	option lookup_host 'xamray.didns.ru'
	option domain 'xamray.didns.ru'
	option username '2eceb2c0134b0316fd3724c86ba4af55'
	option password '2eceb2c0134b0316fd3724c86ba4af55'
	option use_ipv6 '1'
	option ip_source 'web'
	option enabled '1'
	option use_syslog '2'
	option interface 'wan'
	option ip_url 'http://v6.ident.me'
	option use_https '1'
	option check_interval '60'
	option check_unit 'minutes'
	option force_interval '24'
	option force_unit 'hours'
	option retry_unit 'seconds'

